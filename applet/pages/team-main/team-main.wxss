.container {
    display: flex;
    flex-direction: column;

    margin: 20rpx 20rpx 120rpx 20rpx;
}

.top {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.info {
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-left: 30rpx;
}

.info text {
    height: 40rpx;
    line-height: 40rpx;
}

.list {
    display: flex;
    flex-direction: column;

    margin-top: 20rpx;
    background-color: #ffffff;
    border-radius: 20rpx;
}

.head {
    padding: 25rpx 20rpx 25rpx 20rpx;
    border-bottom: 1rpx solid #f1f1f1;
}

.item {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 20rpx;
}

.item-hover {
    background-color: #f8f8f8;
}

.name {
    margin-left: 25rpx;
    flex-grow: 1;
    width: 50%;

    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.mid {
    display: flex;
    flex-direction: column;

    padding: 20rpx;
    margin-top: 20rpx;
    border-radius: 20rpx;
    background-color: white;
}

.tag {
    margin-left: 30rpx;
}

.bottom {
    position: fixed;
    bottom: 20rpx;
    width: 100%;
    text-align: center;

    animation-duration: 0.5s;
    animation-name: floatup;
}

.bottom image {
    margin: 0rpx 60rpx 0rpx 60rpx;
}

@keyframes floatup {
    from {
        bottom: -80rpx;
    }

    to {
        bottom: 20rpx;
    }
}
