page,
.container {
    height: 100%;
}

.container {
    display: flex;
    flex-direction: column;

    padding: 10rpx;
}

.form {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
}

.form-item {
    display: flex;
    flex-direction: row;
    align-items: center;

    margin: 10rpx 0rpx;
}

.form text {
    line-height: 80rpx;
    color: #808080;
}

.form-item input {
    flex-grow: 1;

    border-bottom: 1rpx solid #808080;
    color: #38365f;
}

.form-item textarea {
    flex-grow: 1;

    border-bottom: 1rpx solid #808080;
    color: #38365f;
}

.submit {
    height: 80rpx;
    line-height: 80rpx;
    margin: 0rpx 20rpx 20rpx 20rpx;
    border-radius: 40rpx;
    text-align: center;
}
